{
	"name": "eliashaeussler/typo3-warming",
	"type": "typo3-cms-extension",
	"description": "Extension for TYPO3 CMS which warms up Frontend caches based on a XML sitemap",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Elias Häußler",
			"email": "elias@haeussler.dev",
			"homepage": "https://haeussler.dev",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": "^7.1 || 8.0.*",
		"eliashaeussler/cache-warmup": "^0.4.0",
		"psr/http-message": "^1.0",
		"psr/log": "^1.0",
		"symfony/console": "^4.4 || ^5.2",
		"typo3/cms-backend": "~10.4.0 || ~11.1.0",
		"typo3/cms-core": "~10.4.0 || ~11.1.0",
		"typo3/cms-fluid": "~10.4.0 || ~11.1.0"
	},
	"require-dev": {
		"ergebnis/composer-normalize": "^2.8",
		"helmich/typo3-typoscript-lint": "^1.5 || ^2.0",
		"jangregor/phpstan-prophecy": "^0.8.1",
		"saschaegerer/phpstan-typo3": "^0.13.1",
		"typo3/coding-standards": "^0.3.0",
		"typo3/testing-framework": "^6.8"
	},
	"config": {
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "warming",
			"web-dir": ".Build/web"
		}
	},
	"autoload": {
		"psr-4": {
			"EliasHaeussler\\Typo3Warming\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"EliasHaeussler\\Typo3Warming\\Tests\\": "Tests/"
		}
	},
	"prefer-stable": true,
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/web/typo3conf/ext/",
			"[ -L .Build/web/typo3conf/ext/warming ] || ln -snvf ../../../../. .Build/web/typo3conf/ext/warming"
		],
		"lint": [
			"@lint:php",
			"@lint:typoscript"
		],
		"lint:php": "php-cs-fixer fix",
		"lint:typoscript": "typoscript-lint -c typoscript-lint.yml",
		"sca": [
			"@sca:php"
		],
		"sca:php": "phpstan analyse -c phpstan.neon",
		"test": "phpunit -c phpunit.xml",
		"test:coverage": "phpunit -c phpunit.coverage.xml"
	},
	"support": {
		"issues": "https://gitlab.elias-haeussler.de/typo3/warming/-/issues",
		"source": "https://gitlab.elias-haeussler.de/typo3/warming",
		"rss": "https://gitlab.elias-haeussler.de/typo3/warming.atom"
	}
}
